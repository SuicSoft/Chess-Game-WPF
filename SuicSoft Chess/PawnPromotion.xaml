<Controls:MetroWindow x:Class="SuicSoft_Chess.PawnPromotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="PawnPromotion" Width="345.188"  SizeToContent="Height" Closed="CustomWindow2_Closed" Background="White" IsCloseButtonEnabled="False" GlowBrush="{DynamicResource AccentColorBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#03A9F4">
            <TextBlock Foreground="White" FontSize="44" HorizontalAlignment="Center" VerticalAlignment="Center">Pawn Promotion</TextBlock>
        </Border>
        <StackPanel Grid.Row="1">
            <Button Name="Queen" Margin="10" Click="Queen_Click">Queen</Button>
            <Button Name="Castle" Margin="10" Click="Castle_Click">Castle</Button>
            <Button Name="Bishop" Margin="10" Click="Bishop_Click">Bishop</Button>
            <Button Name="Horse" Margin="10" Click="Horse_Click">Horse</Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
